interface Props {
  avancar: (bonus: number) => void;
}

export default function StepPergunta({ avancar }: Props) {
  return (
    <div>
      <h2>Você ou seu filho tem rinite, sinusite ou vive gripado?</h2>
      <button onClick={() => avancar(15)}>Sim</button>
      <button onClick={() => avancar(5)}>Às vezes</button>
      <button onClick={() => avancar(0)}>Não</button>
    </div>
  );
}
